workflow_dispatch:
    inputs:
      choice:
        description: '投票先を選んでください'
        required: true
        type: choice
        options:
          - 選択肢A
          - 選択肢B
          - 選択肢C

jobs:
  vote:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: 投票を記録
        run: |
          echo "${{ github.event.inputs.choice }}" >> results.txt
          git config user.name "Vote Bot"
          git config user.email "actions@github.com"
          git add results.txt
          git commit -m "New vote cast"
          git push
