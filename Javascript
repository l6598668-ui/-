// 機能切り替え関数
function showFeature(featureId) {
    // 全てのコンテンツを一旦非表示にする
    const contents = document.querySelectorAll('.feature-content');
    contents.forEach(content => {
        content.classList.remove('active');
    });

    // 指定されたIDのコンテンツだけ表示する
    const target = document.getElementById(featureId);
    if (target) {
        target.classList.add('active');
    }
}

// ページ読み込み時の初期表示（例：メニューだけ出す、またはタイマーを出す）
window.onload = () => {
    // localStorageからダークモードの状態を復元する既存コードはそのまま
    if (localStorage.getItem('darkMode') === 'enabled') {
        document.body.classList.add('dark-mode');
    }
    
    // 最初はタイマーを表示しておく場合
    showFeature('timer-section');
};
